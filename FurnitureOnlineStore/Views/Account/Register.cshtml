@model FurnitureOnlineStore.Models.User.UserRegistrationViewModel
@{ ViewData["Title"] = "Înregistrare"; }

<section class="bg-success py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-white">
            </div>
            <div class="col-md-4">
                <img src="~/assets/img/sofa.svg" alt="">
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row py-5">
        <form class="col-md-9 m-auto" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <h1>Înregistrare</h1>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" type="text" class="form-control mt-1" placeholder="E-mail">
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Password">Parola</label>
                <input asp-for="Password" type="password" class="form-control mt-1">
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="PasswordConfirm">Confirmarea parolei</label>
                <input asp-for="PasswordConfirm" type="password" class="form-control mt-1">
            </div>
            <div class="row">
                <div class="col mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Inregistreaza-te</button>
                </div>
            </div>
        </form>
    </div>
</div>