@model List<FurnitureOnlineStore.Models.Products.ProductCategoryViewModel>

@if (Model.Count > 0)
{
    <div class="col-md-4 pt-5">
        <h2 class="h2 text-light border-bottom pb-3 border-light">Produse</h2>
        <ul class="list-unstyled text-light footer-link-list">
            @foreach (var item in Model)
            {
                <li><a class="text-decoration-none" asp-controller="Product" asp-action="Index" asp-route-productCategoryId="@item.Id">@item.Name</a></li>
            }
        </ul>
    </div>
}