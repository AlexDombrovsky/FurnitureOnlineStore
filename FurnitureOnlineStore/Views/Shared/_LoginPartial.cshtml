@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link">@User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Logout">Ieși din cont</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Inregistreaza-te</a>
    </li>
    <li class="nav-item">

        <a class="nav-link" asp-controller="Account" asp-action="Login">Autorizare</a>
    </li>
}