@using System.Security.Claims
@model FurnitureOnlineStore.Models.Products.ProductCategoryViewModel

@{ ViewData["Title"] = "Adăugați o categorie"; }

<section class="bg-success py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-white">
                @if (User.Identity.IsAuthenticated && User.HasClaim(ClaimTypes.Role, "Admin"))
                {
                    <a class="btn btn-success btn-lg px-5" asp-controller="Product" asp-action="Create">Adăugați mobilier</a>
                }
            </div>
            <div class="col-md-4">
                <img src="~/assets/img/sofa.svg" alt="">
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row py-5">
        <form class="col-md-9 m-auto" asp-action="CreateCategory" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <h1>Adăugați o categorie</h1>
            </div>
            <div class="row">
                <div class="form-group mb-3">
                    <label asp-for="Name">Numele categoriei</label>
                    <input asp-for="Name" type="text" class="form-control mt-1" placeholder="Numele categoriei" required oninvalid="this.setCustomValidity('Vă rugăm să completați acest câmp')">
                </div>
            </div>
            <div class="row">
                <div class="col text-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Adaugă categorie</button>
                </div>
            </div>
        </form>
    </div>
</div>