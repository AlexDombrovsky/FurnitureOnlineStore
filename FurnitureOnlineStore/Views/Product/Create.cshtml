@using System.Security.Claims
@model FurnitureOnlineStore.Models.Products.ProductViewModel

@{ ViewData["Title"] = "Adăugați mobilier"; }

<section class="bg-success py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-white">
                @if (User.Identity.IsAuthenticated && User.HasClaim(ClaimTypes.Role, "Admin"))
                {
                    <a class="btn btn-success btn-lg px-5" asp-controller="Product" asp-action="CreateCategory">Adăugați o categorie</a>
                }
            </div>
            <div class="col-md-4">
                <img src="~/assets/img/sofa.svg" alt="">
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row py-5">
        <form class="col-md-9 m-auto" asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <h1>Adăugați mobilier</h1>
            </div>
            <div class="mb-3">
                <input asp-for="UploadedPhotos" type="file" multiple required>
                <span asp-validation-for="UploadedPhotos"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Name">Nume</label>
                    <input asp-for="Name" type="text" class="form-control mt-1" placeholder="Nume" required>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Manufacturer">Producător</label>
                    <input asp-for="Manufacturer" type="text" class="form-control mt-1" placeholder="Producător" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Price">Preț</label>
                    <input asp-for="Price" type="number" class="form-control mt-1" placeholder="Preț" required>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="AllCategories">Categorii</label>
                    <select class="form-control mt-1" asp-for="ProductCategoryId" asp-items="@Model.AllCategories" required>
                        <option value="" disabled selected hidden>Alege o categorie</option>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Description">Descriere</label>
                <textarea asp-for="Description" class="form-control mt-1" placeholder="Descriere" rows="3"></textarea>
            </div>
            <div class="row">
                <div class="col text-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Adaugă mobilier</button>
                </div>
            </div>
        </form>
    </div>
</div>